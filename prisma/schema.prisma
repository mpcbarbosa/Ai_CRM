generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      UserRole @default(COMMERCIAL)
  avatar    String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  auditLogs AuditLog[]
  activities Activity[]
  leads     Lead[]   @relation("AssignedLeads")
}

enum UserRole {
  ADMIN
  COMMERCIAL
  READONLY
}

model Company {
  id          String    @id @default(cuid())
  name        String
  domain      String    @unique
  website     String?
  country     String?
  sector      String?
  size        String?
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  contacts    Contact[]
  signals     LeadSignal[]
  lead        Lead?
}

model Contact {
  id          String   @id @default(cuid())
  companyId   String
  name        String
  email       String?
  role        String?
  phone       String?
  linkedin    String?
  sourceAgent String?
  createdAt   DateTime @default(now())
  company     Company  @relation(fields: [companyId], references: [id])
}

model LeadSignal {
  id               String   @id @default(cuid())
  companyId        String
  agentName        String
  triggerType      String
  rawData          Json
  score_trigger    Float    @default(0)
  score_probability Float   @default(0)
  score_final      Float    @default(0)
  probability      Float?
  summary          String?
  sourceUrl        String?
  detectedAt       DateTime @default(now())
  createdAt        DateTime @default(now())
  company          Company  @relation(fields: [companyId], references: [id])
}

enum LeadStatus {
  NEW
  MQL
  SQL
  LOST
}

enum ActivityType {
  CALL
  EMAIL
  MEETING
  NOTE
  TASK
}

model Activity {
  id            String       @id @default(cuid())
  leadId        String
  type          ActivityType
  title         String
  notes         String?
  nextAction    String?
  nextActionAt  DateTime?
  doneAt        DateTime     @default(now())
  createdBy     String?
  userId        String?
  createdAt     DateTime     @default(now())
  lead          Lead         @relation(fields: [leadId], references: [id])
  user          User?        @relation(fields: [userId], references: [id])
}

model Lead {
  id                  String     @id @default(cuid())
  companyId           String     @unique
  status              LeadStatus @default(NEW)
  marketingQualified  Boolean    @default(false)
  salesQualified      Boolean    @default(false)
  totalScore          Float      @default(0)
  assignedToId        String?
  tags                String[]   @default([])
  notes               String?
  lostReason          String?
  lastActivityDate    DateTime   @default(now())
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  company             Company    @relation(fields: [companyId], references: [id])
  assignedTo          User?      @relation("AssignedLeads", fields: [assignedToId], references: [id])
  opportunities       Opportunity[]
  activities          Activity[]
  auditLogs           AuditLog[]
  scoreHistory        ScoreHistory[]
}

enum OpportunityStage {
  DISCOVERY
  PROPOSAL
  NEGOTIATION
  WON
  LOST
}

model Opportunity {
  id             String           @id @default(cuid())
  leadId         String
  companyId      String
  stage          OpportunityStage @default(DISCOVERY)
  estimatedValue Float?
  probability    Float?
  owner          String?
  lostReason     String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  lead           Lead             @relation(fields: [leadId], references: [id])
}

enum AuditAction {
  LEAD_CREATED
  STATUS_CHANGED
  SIGNAL_RECEIVED
  COMPANY_EDITED
  CONTACT_ADDED
  ACTIVITY_CREATED
  OPPORTUNITY_CREATED
  OPPORTUNITY_UPDATED
  LEAD_ASSIGNED
  LEAD_QUALIFIED
  LEAD_TAGGED
  NOTE_ADDED
  SCORE_UPDATED
}

model AuditLog {
  id        String      @id @default(cuid())
  leadId    String
  userId    String?
  userName  String
  action    AuditAction
  details   Json
  createdAt DateTime    @default(now())
  lead      Lead        @relation(fields: [leadId], references: [id])
  user      User?       @relation(fields: [userId], references: [id])
}

model ScoreHistory {
  id        String   @id @default(cuid())
  leadId    String
  score     Float
  triggerType String?
  agentName   String?
  createdAt DateTime @default(now())
  lead      Lead     @relation(fields: [leadId], references: [id])
}
